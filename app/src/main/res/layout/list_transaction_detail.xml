<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="0dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:text="Dec 3, 2020"
            android:textColor="#6D6D6D"
            android:textSize="10sp"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/interactionEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="Client"
            android:textColor="#6D6D6D"
            android:textSize="20sp"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <TextView
        android:id="@+id/creditChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="+0 credit"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:gravity="right"
        android:layout_weight="0.3"/>

    <ImageView
        android:id="@+id/transactionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/device_name"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/user_detail" />

</LinearLayout>